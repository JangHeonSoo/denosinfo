---
interface Props {
	title?: string
	subtitle?: string
	stats?: { label: string; value: string }[]
	backgroundImage?: string
}

const {
	title = 'Denosinfo', 
	subtitle,
	stats = [],
	backgroundImage
} = Astro.props
---

<section class='relative h-[80vh] min-h-[500px] flex flex-col justify-center items-center overflow-hidden -mt-20'>
	{backgroundImage && (
		<>
            {/* Background Image: High Quality Dark Photo */}
			<img src={backgroundImage} alt='Background' class='absolute top-0 left-0 w-full h-full object-cover -z-20' />
            
            {/* Dark Gradients for Integration - Balanced 40% */}
            {/* Top mask: Improved text readability */}
            <div class='absolute top-0 left-0 w-full h-1/2 bg-gradient-to-b from-black/40 to-transparent -z-10'></div>
            
            {/* Bottom bleed: Balanced intensity */}
            <div class='absolute bottom-0 left-0 w-full h-2/3 bg-gradient-to-t from-bg-light via-bg-light/40 to-transparent dark:from-[#0a0910] dark:via-[#0a0910]/40 dark:to-transparent -z-10'></div>
		</>
	)}
	
	<div class='container mx-auto px-6 z-10 text-center'>
        {/* Magazine Style Typography: Matched with About/Contact structural emphasis */}
		<h1 class='text-6xl md:text-8xl lg:text-[7rem] font-heading font-extrabold mb-8 tracking-tighter text-white/90 fade-in uppercase'>
			DENOS<span class="text-primary font-light">INFO</span>
		</h1>
        
        {subtitle && (
            <>
                {/* Separator Line */}
                <div class="w-24 h-[1px] bg-slate-400 mx-auto mb-10 fade-in-delay-1"></div>

                <p class='text-lg md:text-2xl font-serif italic text-slate-600 dark:text-slate-300 max-w-3xl mx-auto mb-16 fade-in-delay-1 leading-loose tracking-wide'>
                    {subtitle}
                </p>
            </>
        )}
		
		{stats && stats.length > 0 && (
			<div class='flex justify-center gap-12 md:gap-24 mt-8 fade-in-delay-2 border-t border-slate-200 dark:border-slate-800 pt-10 inline-flex px-10'>
				{stats.map((stat) => (
					<div class='flex flex-col text-xs uppercase tracking-[0.2em] text-slate-500'>
						<span class='text-2xl md:text-4xl font-heading font-light mb-2 text-slate-800 dark:text-slate-200'>{stat.value}</span>
						{stat.label}
					</div>
				))}
			</div>
		)}

        <div class="mt-20 fade-in-delay-2">
            <div class="animate-bounce-slow">
                <svg class="w-6 h-6 mx-auto text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 14l-7 7m0 0l-7-7m7 7V3"/></svg>
            </div>
        </div>
	</div>
</section>

<style>
	.fade-in {
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 1s forwards cubic-bezier(0.2, 0.8, 0.2, 1);
	}
	
	.fade-in-delay-1 {
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 1s forwards cubic-bezier(0.2, 0.8, 0.2, 1);
		animation-delay: 0.2s;
	}
	
	.fade-in-delay-2 {
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 1s forwards cubic-bezier(0.2, 0.8, 0.2, 1);
		animation-delay: 0.4s;
	}
	
	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

    .animate-bounce-slow {
        animation: bounceSlow 3s infinite;
    }

    @keyframes bounceSlow {
        0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
        40% {transform: translateY(-10px);}
        60% {transform: translateY(-5px);}
    }
</style>
