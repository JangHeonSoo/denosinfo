---
import type { CollectionEntry } from 'astro:content'

import {
	DEFAULT_LOCALE,
	cn,
	getCategoryName,
	getLocalePrefix,
	sluglify,
	stripLocaleFromSlug
} from '@/utils'
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
const locale = Astro.currentLocale ?? DEFAULT_LOCALE
const localePrefix = getLocalePrefix(locale)
const resolveHeroImage = (image?: string | ImageMetadata) =>
	typeof image === 'string' ? image : image?.src
---

<section class={cn(`flex flex-col md:flex-row sm:justify-between gap-8`)}>
	{
		posts.length > 0 ? (
		posts.map((post) => {
			const categorySlug = sluglify(getCategoryName(post.data.category).toLowerCase())
			const postSlug = stripLocaleFromSlug(post.slug, locale)
			const heroImageSrc = resolveHeroImage(post.data.heroImage)
			return (
				<div class='flex flex-wrap gap-2'>
						{heroImageSrc ? (
							<div class='min-h-full'>
								<Image
									src={heroImageSrc as string}
									width={200}
									height={200}
									format='webp'
									class='w-16 h-16 object-cover rounded-full  '
									alt={`img of ${post.data.title}`}
								/>
							</div>
						) : null}
						<header class='flex justify-center items-center'>
						<a class='font-medium  hover:underline' href={`${localePrefix}/${categorySlug}/${postSlug}/`}>
								{post.data.title}
							</a>
						</header>
					</div>
				)
			})
		) : (
			<span class='text-gray-500'>There are no related posts yet. ðŸ˜¢</span>
		)
	}
</section>
