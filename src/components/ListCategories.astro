---
import { DEFAULT_LOCALE, getCategories } from '@/utils'
import Category from '@/components/Category'
const locale = Astro.currentLocale ?? DEFAULT_LOCALE
const categories = await getCategories(locale)

const { activeCategory } = Astro.props
---

<div class='flex justify-center flex-wrap gap-4 py-12'>
	<Category />
	{
		categories.map((category: string) => (
			<Category name={category} activeCategory={activeCategory} />
		))
	}
</div>
