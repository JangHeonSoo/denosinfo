---
import ListCategories from '@/components/ListCategories'
import BaseLayout from '@/layouts/BaseLayout'
import Hero from '@/components/Hero'
import FadeIn from '@/components/FadeIn'
import { getPosts } from '@/utils'
import { siteConfig } from '@/site-config'

const MAX_POSTS = 7 // max number of posts to show on the home page (1 featured + 6 recent)
const posts = await getPosts(MAX_POSTS)
const featuredPost = posts[0]
const recentPosts = posts.slice(1)
---

<BaseLayout title='Home'>
    <!-- Custom Hero Section -->
    <Hero 
        title="DENOSINFO"
        backgroundImage="/images/hero-code-dark.jpg"
    />
	
    <!-- Main Content Area -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 -mt-20 relative z-20">
        
        <!-- Categories Section -->
        <div class="mb-20">
            <FadeIn delay={0.2} direction="up">
                <div class="glass-card rounded-3xl p-8 flex flex-col items-center justify-center text-center">
                    <h2 class="text-2xl font-heading font-bold mb-6 text-gray-800 dark:text-gray-100">Explore Topics</h2>
                    <ListCategories />
                </div>
            </FadeIn>
        </div>

        <!-- Featured Post Section -->
        {featuredPost && (
            <div class="mb-24">
                 <FadeIn delay={0.3} direction="up">
                    <div class="flex items-end justify-between mb-8 px-2">
                        <h2 class="text-4xl font-heading font-black tracking-tight text-gray-900 dark:text-white">Featured Story</h2>
                        <a href="/blog" class="hidden sm:flex text-primary hover:text-secondary font-semibold items-center gap-2 transition-colors">
                            View All Posts <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                        </a>
                    </div>
                    
                    <article class="group relative rounded-[2.5rem] overflow-hidden shadow-2xl bg-white dark:bg-gray-900 isolate hover:shadow-primary/20 transition-all duration-500">
                        <div class="grid lg:grid-cols-2 gap-0">
                            <div class="relative h-[400px] lg:h-auto overflow-hidden">
                                <div class="absolute inset-0 bg-gray-200 dark:bg-gray-800">
                                    {featuredPost.data.heroImage && (
                                        <img 
                                            src={featuredPost.data.heroImage} 
                                            alt={featuredPost.data.title} 
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out" 
                                        />
                                    )}
                                </div>
                                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent lg:hidden"></div>
                                <div class="absolute bottom-6 left-6 lg:hidden">
                                     {featuredPost.data.category && (
                                        <span class="inline-block px-4 py-1.5 bg-primary text-white text-xs font-bold rounded-full uppercase tracking-wider mb-3 shadow-lg">
                                            {featuredPost.data.category}
                                        </span>
                                    )}
                                </div>
                            </div>
                            
                            <div class="p-8 md:p-12 lg:p-16 flex flex-col justify-center relative bg-white dark:bg-gray-900">
                                <div class="hidden lg:flex items-center gap-4 mb-8">
                                     {featuredPost.data.category && (
                                        <span class="px-4 py-1.5 bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-300 text-sm font-bold rounded-full uppercase tracking-wider">
                                            {featuredPost.data.category}
                                        </span>
                                    )}
                                    <time class="text-gray-500 dark:text-gray-400 text-sm font-medium flex items-center gap-2">
                                        <span class="w-1 h-1 rounded-full bg-gray-400"></span>
                                        {featuredPost.data.pubDate?.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}
                                    </time>
                                </div>
                                
                                <h3 class="text-3xl md:text-5xl font-heading font-black mb-6 leading-tight group-hover:text-primary transition-colors text-gray-900 dark:text-white">
                                    <a href={`/${featuredPost.collection}/${featuredPost.slug}`}>
                                        {featuredPost.data.title}
                                    </a>
                                </h3>
                                
                                <div class="relative">
                                    <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-10 line-clamp-3 leading-relaxed border-l-4 border-primary/30 pl-6">
                                        {featuredPost.data.description}
                                    </p>
                                </div>
                                
                                <div class="mt-auto">
                                    <a href={`/${featuredPost.collection}/${featuredPost.slug}`} class="inline-flex items-center gap-2 text-lg font-bold text-gray-900 dark:text-white group/btn">
                                        <span class="border-b-2 border-primary group-hover/btn:border-secondary transition-colors pb-0.5">Read Full Article</span>
                                        <svg class="w-5 h-5 group-hover/btn:translate-x-1 transition-transform text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </article>
                </FadeIn>
            </div>
        )}

        <!-- Recent Posts Section -->
        <div>
            <FadeIn delay={0.4} direction="up">
                <div class="flex items-center justify-between mb-12 px-2 border-b border-gray-200 dark:border-gray-800 pb-4">
                    <h2 class="text-3xl font-heading font-bold text-gray-900 dark:text-white">Recent Stories</h2>
                    <a href="/blog" class="sm:hidden text-primary font-medium text-sm">View All</a>
                </div>
            </FadeIn>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
                {recentPosts.map((post, index) => (
                    <FadeIn delay={0.1 * index} direction="up">
                        <article class="flex flex-col h-full bg-transparent group">
                            {post.data.heroImage && (
                                <a href={`/${post.collection}/${post.slug}`} class="block overflow-hidden rounded-2xl h-64 relative mb-6 shadow-md group-hover:shadow-xl transition-all duration-300">
                                    <img 
                                        src={post.data.heroImage} 
                                        alt={post.data.title}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                    <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
                                    <div class="absolute top-4 left-4">
                                         <span class="inline-flex items-center justify-center px-3 py-1 bg-white/90 dark:bg-black/80 backdrop-blur text-xs font-bold rounded-lg shadow-sm">
                                            {post.data.category}
                                        </span>
                                    </div>
                                </a>
                            )}
                            <div class="flex flex-col flex-grow">
                                <div class="text-xs text-gray-500 dark:text-gray-400 mb-3 font-medium flex items-center gap-2">
                                     <time>{post.data.pubDate?.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                                </div>
                                <h3 class="text-2xl font-bold mb-3 leading-snug text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                                    <a href={`/${post.collection}/${post.slug}`}>
                                        {post.data.title}
                                    </a>
                                </h3>
                                <p class="text-gray-600 dark:text-gray-400 line-clamp-3 mb-4 leading-relaxed flex-grow">
                                    {post.data.description}
                                </p>
                                <div class="pt-2">
                                    <a href={`/${post.collection}/${post.slug}`} class="text-sm font-bold text-primary flex items-center gap-1 group/link">
                                        Read Now <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                                    </a>
                                </div>
                            </div>
                        </article>
                    </FadeIn>
                ))}
            </div>

            <!-- View All Button -->
            <FadeIn delay={0.6} direction="up">
                <div class="flex justify-center mt-24">
                    <a 
                        href="/blog" 
                        class="group inline-flex items-center gap-3 px-12 py-5 bg-gradient-to-r from-gray-900 to-gray-800 dark:from-white dark:to-gray-200 text-white dark:text-gray-900 font-bold rounded-full transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:shadow-primary/30"
                    >
                        <span>More Articles</span>
                        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>
            </FadeIn>
        </div>
    </div>
</BaseLayout>
