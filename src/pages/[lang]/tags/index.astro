---
import BaseLayout from '@/layouts/BaseLayout'
import FadeIn from '@/components/FadeIn'
import { DEFAULT_LOCALE, SUPPORTED_LOCALES, getLocalePrefix, getPosts } from '@/utils'

export async function getStaticPaths() {
	return SUPPORTED_LOCALES.map((lang) => ({
		params: { lang }
	}))
}

// Get all posts and count tag frequencies
const locale = Astro.params.lang ?? DEFAULT_LOCALE
const localePrefix = getLocalePrefix(locale)
const posts = await getPosts(undefined, locale)
const tagCounts = new Map<string, number>()

posts.forEach(post => {
	post.data.tags?.forEach(tag => {
		tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1)
	})
})

// Convert to array and sort by count calling it 'tags' for easier mapping
const tags = Array.from(tagCounts.entries())
	.sort((a, b) => b[1] - a[1])
    .map(([tag, count]) => ({ name: tag, count }))

---

<BaseLayout title='Tags'>
    
    <!-- Hero Section -->
    <div class="relative py-20 mb-12 bg-gradient-to-br from-bg-light to-white dark:from-[#0f172a] dark:to-[#1e293b] overflow-hidden">
        <div class="absolute inset-0 opacity-10 dark:opacity-20 pattern-grid-lg"></div>
        <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
            <FadeIn delay={0.1} direction="up">
                <span class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary font-bold text-sm mb-6 tracking-wide uppercase">
                    Topics & Interests
                </span>
                <h1 class="text-4xl md:text-5xl font-heading font-black mb-6 text-gray-900 dark:text-white">
                    Explore by <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">Category</span>
                </h1>
                <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-10">
                    Find articles that match your interests from our collection of {posts.length} stories.
                </p>

                <!-- Search Input -->
                <div class="max-w-md mx-auto relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400 group-focus-within:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    </div>
                    <input 
                        type="text" 
                        id="tag-search" 
                        placeholder="Search topics..." 
                        class="w-full pl-11 pr-4 py-4 bg-white dark:bg-gray-800 border-2 border-gray-100 dark:border-gray-700 rounded-2xl focus:border-primary focus:ring-4 focus:ring-primary/10 transition-all outline-none shadow-lg text-gray-900 dark:text-white placeholder-gray-400"
                    >
                </div>
            </FadeIn>
        </div>
    </div>

	<div class="max-w-7xl mx-auto px-4 pb-24">
        <FadeIn delay={0.3} direction="up">
            <div id="no-tags-found" class="hidden text-center py-20">
                <p class="text-gray-500 text-lg">No topics found matching your search.</p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6" id="tag-grid">
                {tags.map((tag) => (
                    <a 
                        href={`${localePrefix}/tags/${tag.name.toLowerCase()}`}
                        class="tag-item group relative bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-gray-100 dark:border-gray-700 flex flex-col justify-between h-32 overflow-hidden"
                        data-tag={tag.name.toLowerCase()}
                    >
                        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                             <svg class="w-16 h-16 text-primary rotate-12" fill="currentColor" viewBox="0 0 24 24"><path d="M7 7h10v10H7z" fill="none"/><path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/></svg>
                        </div>
                        
                        <div>
                            <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary transition-colors mb-1 break-words">
                                #{tag.name}
                            </h3>
                        </div>
                        
                        <div class="flex items-center justify-between mt-auto relative z-10">
                            <span class="text-sm font-medium text-gray-500 dark:text-gray-400 group-hover:text-gray-700 dark:group-hover:text-gray-300">
                                {tag.count} {tag.count === 1 ? 'post' : 'posts'}
                            </span>
                            <span class="w-8 h-8 rounded-full bg-gray-50 dark:bg-gray-700 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                            </span>
                        </div>
                    </a>
                ))}
            </div>
        </FadeIn>
	</div>
</BaseLayout>

<script>
    const searchInput = document.getElementById('tag-search') as HTMLInputElement;
    const tagItems = document.querySelectorAll('.tag-item') as NodeListOf<HTMLElement>;
    const noResults = document.getElementById('no-tags-found');

    if (searchInput) {
        searchInput.addEventListener('input', (e) => {
            const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
            let hasVisibleTags = false;

            tagItems.forEach((item) => {
                const tagText = item.getAttribute('data-tag') || '';
                
                if (tagText.includes(searchTerm)) {
                    item.style.display = 'flex'; // Restore flex for grid
                    if(item.parentElement) item.parentElement.classList.remove('hidden'); // Ensure parent isn't hidden if we wrapped
                    
                    // Simple animation reset
                    item.animate([
                        { transform: 'scale(0.95)', opacity: 0.5 },
                        { transform: 'scale(1)', opacity: 1 }
                    ], { duration: 200, fill: 'forwards' });

                    hasVisibleTags = true;
                } else {
                    item.style.display = 'none';
                }
            });

            if (noResults) {
                noResults.classList.toggle('hidden', hasVisibleTags);
            }
        });
    }
</script>

<style>
    .pattern-grid-lg {
        background-image: radial-gradient(currentColor 1px, transparent 1px);
        background-size: 24px 24px;
    }
</style>
